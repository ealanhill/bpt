<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PageTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/double_standard_text_size</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="ArticleTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
    </style>

    <style name="ArticleDescription">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="CTA">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ChipTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/chip_color_text</item>
    </style>

    <style name="TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Error">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/midwinter_fire</item>
    </style>

    <style name="ProductivityCard"/>

    <style name="ProductivityCard.Title">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
    </style>

    <style name="ProductivityCard.SubTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/double_standard_text_size</item>
    </style>

    <style name="ProductivityCard.Description">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>
</resources>
